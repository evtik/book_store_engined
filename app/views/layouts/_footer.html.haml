%footer.navbar.navbar-inverse.mb-0
  .container
    .row
      .col-sm-9
        %ul.list-inline.general-align.mb-25
          %li
            = link_to(t('layouts.header.home'), root_path, class: 'nav-link')
          %li
            = link_to(t('layouts.header.shop'),
              catalog_index_path, class: 'nav-link')
          - if user_signed_in?
            %li
              = link_to(t('layouts.my_account.orders'), orders_path,
                class: 'nav-link')
            %li
              = link_to(t('layouts.my_account.settings'), settings_path,
                class: 'nav-link')
      .col-sm-3
        %p.general-nav-mail support@bookstore.com
        %p.general-nav-number (555)-555-5555
        %ul.list-inline.general-align
          %li
            %a.nav-link{href: 'https://www.facebook.com'}
              %i.fab.fa-facebook{'aria-hidden': 'true'}
          %li
            %a.nav-link{href: 'https://twitter.com'}
              %i.fab.fa-twitter{'aria-hidden': 'true'}
          %li
            %a.nav-link{href: 'https://plus.google.com'}
              %i.fab.fa-google-plus{'aria-hidden': 'true'}
          %li
            %a.nav-link{href: 'https://www.instagram.com'}
              %i.fab.fa-instagram{'aria-hidden': 'true'}
